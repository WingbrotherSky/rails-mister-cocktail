<div class="container">
    <div class-"row">
        <div class="col col-xs-12 col-sm-6 col-sm-offset-3">
            <h1>Cocktail Show Page</h1>
            <h2><%= @cocktail.name %></h2>

            <ul>
                <% @cocktail.doses.each do |dose| %>
                    <li>
                    <%= dose.description %> of <%= dose.ingredient.name %>
                    <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do %>
                    <i class="fa fa-trash-alt"></i>
                    <% end %>
                    </li>
                    <% end %>
            </ul>
            <%= link_to "Add dose.", new_cocktail_dose_path(@cocktail) %>
        </div>
        
    </div>

</div>
